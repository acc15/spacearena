            <unpack>true</unpack>
            <scope>runtime</scope>
            <excludes>
                <!-- gluegen-rt -->
                <exclude>org.jogamp.gluegen:gluegen-rt:jar:natives-android-armv6</exclude>
                <exclude>org.jogamp.gluegen:gluegen-rt:jar:natives-linux-amd64</exclude>
                <exclude>org.jogamp.gluegen:gluegen-rt:jar:natives-linux-armv6</exclude>
