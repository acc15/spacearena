            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/natives/macosx-universal</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.jogamp.gluegen:gluegen-rt:jar:natives-macosx-universal</include>
                <include>org.jogamp.jogl:jogl-all:jar:natives-macosx-universal</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/natives/solaris-amd64</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>org.jogamp.gluegen:gluegen-rt:jar:natives-solaris-amd64</include>
